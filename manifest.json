{
  "manifest_version": 3,
  "name": "NeetCode GitHub Sync",
  "version": "1.0",
  "description": "Sync NeetCode solutions with GitHub.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://api.github.com/*"
  ],
  "web_accessible_resources": [{
    "resources": ["inject.js"],
    "matches": ["<all_urls>"]
  }],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icons8-chrome-100.png",
      "48": "icons/icons8-chrome-100.png",
      "128": "icons/icons8-chrome-100.png"
    }
  },
  "options_page": "options.html"
}
